package com.epam.jmp.classloader;

import static org.junit.Assert.assertFalse;
import static org.junit.Assert.assertTrue;

import java.util.concurrent.atomic.AtomicInteger;

import org.junit.Test;

public class StatelessClassLoaderTest {

	@Test
	public void testStringIsStateless() {
		assertTrue(StatelessClassLoader.isStateless(String.class));
	}
	
	@Test
	public void testIntegerIsStateless() {
		assertTrue(StatelessClassLoader.isStateless(Integer.class));
	}
	
	@Test
	public void testIntegerIsNotStateless() {
		assertFalse(StatelessClassLoader.isStateless(AtomicInteger.class));
	}
	
}
